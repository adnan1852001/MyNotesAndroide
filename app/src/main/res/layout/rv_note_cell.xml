<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_backgroud"
    android:layout_margin="16dp"
    >

    <TextView
        android:id="@+id/char_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/shape_new"
        android:padding="10dp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/char_shape"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Work"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        />
    <TextView
        android:id="@+id/title0"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/char_shape"
        app:layout_constraintTop_toTopOf="@id/address"
        android:text="Notes for work..."
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="18dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        />
   <ImageView
       android:id="@+id/shape_11"
       android:layout_width="20dp"
       android:layout_height="0dp"
       android:src="@drawable/shape_11"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       />
    <ImageView
        android:id="@+id/pen_white"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_baseline_create_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_baseline_delete_forever_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/shape_11"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>